            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widget.CitrWidgetProvider"
            android:icon="@drawable/citr"
            android:label="Citr" >
